{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PHPStan",
      "type": "shell",
      "command": "php vendor/bin/phpstan analyse -c .phpstan.neon --memory-limit 500M",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "focus": true,
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
